{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@Components/*": ["./src/components/*"],
      "@Constant/*": ["./src/constant/*"],
      "@Data/*": ["./src/data/*"],
      "@Hooks/*": ["./src/hooks/*"],
      "@Pages/*": ["./src/pages/*"],
      "@Utils/*": ["./src/utils/*"],
      "@Styles/*": ["./src/styles/*"]
    },
    "allowJs": true,
    "jsx": "react",
    "alwaysStrict": true,
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "@types/index.d.ts"],
  "exclude": ["node_modules"]
}
