{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "@Components/*": ["./src/components/*"],
      "@Constant/*": ["./src/constant/*"],
      "@Data/*": ["./src/data/*"],
      "@Hooks/*": ["./src/hooks/*"],
      "@Libs/*": ["./src/libs/*"],
      "@Pages/*": ["./src/pages/*"],
      "@Recoil/*": ["./src/recoil/*"],
      "@Styles/*": ["./src/styles/*"],
      "@Utils/*": ["./src/utils/*"],
      "@Translations/*": ["./src/translations/*"],
      // @Base
      "@Base/*": ["./base/*"]
    },
    "allowJs": true,
    "jsx": "preserve",
    "alwaysStrict": true,
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "@types/**/*d.ts",
    ".next/types/**/*.ts",
    "base/**/*.ts",
    "base/**/*.tsx"
  ],
  "exclude": ["node_modules", "src/libs"]
}
